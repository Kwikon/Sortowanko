<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:padding="@dimen/padding"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rozmiarDanychText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rozmiar_danych1"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>

        <EditText
            android:id="@+id/rozmiarDanychInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/rozmiar_danych"
            android:ems="10"
            android:inputType="numberSigned"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"
            android:autofillHints="100" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dataText"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/startButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="@string/start_button"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/generujButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="@string/generuj"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>